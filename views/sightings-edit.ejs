<!DOCTYPE html>
<html lang="en">
  <%- include('partials/head.ejs') %>

  <body class="forest-body">
    <%- include('partials/nav.ejs') %>

    <main class="page-main">
      <section class="container py-5">
        <header class="page-header mb-4">
          <h1 class="page-title">Edit Sighting</h1>
          <p class="page-subtitle">
            Update what you saw, where, and when.
          </p>

          <% if (error) { %>
            <div class="alert alert-danger mt-2"><%= error %></div>
          <% } %>
          <% if (message) { %>
            <div class="alert alert-success mt-2"><%= message %></div>
          <% } %>
        </header>

        <div class="forest-card">
          <form class="row g-4" action="/sightings/<%= sighting.sighting_id %>/edit" method="post">
            <!-- cryptid dropdown -->
            <div class="col-md-6">
              <label for="cryptidId" class="form-label">Cryptid</label>
              <select
                id="cryptidId"
                name="cryptid_id"
                class="form-control forest-input"
                required
              >
                <option value="">Select a cryptid...</option>
                <% if (cryptids && cryptids.length) { %>
                  <% cryptids.forEach(c => { %>
                    <option
                      value="<%= c.cryptid_id %>"
                      <%= String(sighting.cryptid_id) === String(c.cryptid_id) ? 'selected' : '' %>
                    >
                      <%= c.name %>
                    </option>
                  <% }) %>
                <% } %>
              </select>
            </div>

            <!-- location dropdown -->
            <div class="col-md-6">
              <label for="location" class="form-label">Location</label>
              <select
                id="location"
                name="location_name"
                class="form-control forest-input"
                required
                data-selected="<%= sighting.location_name || '' %>"
              >
                <option value="">Loading states...</option>
              </select>
            </div>

            <div class="col-md-6">
              <label for="date" class="form-label">Date</label>
              <input
                type="date"
                class="form-control forest-input"
                id="date"
                name="date"
                value="<%= dateForInput %>"
                required
              >
            </div>

            <div class="col-md-6">
              <label for="time" class="form-label">Time</label>
              <input
                type="time"
                class="form-control forest-input"
                id="time"
                name="time"
                value="<%= timeForInput %>"
              >
            </div>

            <div class="col-12">
              <label for="details" class="form-label">What did you see?</label>
              <textarea
                id="details"
                name="details"
                class="form-control forest-input"
                rows="4"
                placeholder="Describe sounds, shapes, lights, tracks, or anything that feltâ€¦ off."
              ><%= sighting.description || '' %></textarea>
            </div>

            <div class="col-md-6">
              <label for="mood" class="form-label">How was its behavior?</label>
              <input
                type="range"
                class="form-range"
                id="mood"
                name="mood"
                min="1"
                max="5"
                value="<%= sighting.danger_level || 3 %>"
              >
              <div class="d-flex justify-content-between tiny-labels">
                <span>Docile</span>
                <span>Defensive</span>
                <span>Aggressive</span>
              </div>
            </div>

            <div class="col-12 d-flex justify-content-end gap-2">
              <a href="/sightings?mode=mine" class="btn btn-ghost">
                Cancel
              </a>
              <button type="submit" class="btn btn-forest">
                Save Changes
              </button>
            </div>
          </form>
        </div>
      </section>
    </main>

    <%- include('partials/footer.ejs') %>

    <!-- same js as /sightings/new -->
    <script src="/js/sightingsnew.js"></script>
  </body>
</html>