<!DOCTYPE html>
<html lang="en">
  <%- include('partials/head.ejs') %>

  <body class="forest-body">
    <%- include('partials/nav.ejs') %>

    <main class="page-main">
      <section class="container py-5 auth-section">
        <div class="row justify-content-center">
          <div class="col-md-10 col-lg-7 col-xl-6">
            <div class="forest-card auth-card">
              <header class="mb-4 text-center">
                <p class="featured-label mb-1">Enter the woods</p>
                <h1 class="page-title mb-1">Sign In</h1>
                <p class="page-subtitle mb-0">
                  Log in to track your sightings and revisit your favorite cryptids.
                </p>
              </header>

              <% if (typeof error !== "undefined" && error) { %>
                <div class="alert alert-danger py-2">
                  <%= error %>
                </div>
              <% } %>

              <% if (typeof message !== "undefined" && message) { %>
                <div class="alert alert-success py-2">
                  <%= message %>
                </div>
              <% } %>

              <form action="/login" method="POST" class="row g-3">
                <div class="col-12">
                  <label for="username" class="form-label">Username</label>
                  <input
                    type="text"
                    class="form-control forest-input"
                    id="username"
                    name="username"
                    required
                  >
                </div>

                <div class="col-12">
                  <label for="password" class="form-label">Password</label>
                  <input
                    type="password"
                    class="form-control forest-input"
                    id="password"
                    name="password"
                    required
                  >
                </div>

                <div class="col-12 d-flex justify-content-between align-items-center mt-2">
                  <button type="submit" class="btn btn-forest">
                    Sign In
                  </button>
                  <a href="/signup" class="small text-decoration-none">
                    Need an account? <span class="text-reset">Sign up</span>
                  </a>
                </div>
              </form>
            </div>
          </div>
        </div>
      </section>
    </main>

    <%- include('partials/footer.ejs') %>
  </body>
</html>
