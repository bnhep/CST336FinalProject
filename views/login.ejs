<!DOCTYPE html>
<html lang="en">

    <!-- partial for header -->

    <%- include('partials/head.ejs') %> 

    <body>
        <!-- partial for nav -->
        <%- include('partials/nav.ejs') %> 

    <div class="container auth-container">
    <div class="auth-tabs d-flex justify-content-center mb-4">
        <a href="#" class="auth-tab active">Sign in</a>
        <a href="#" class="auth-tab">Create Account</a>
    </div>

    <hr class="divider">

    <form action="/login" method="POST">
        <!-- Username -->
        <label for="username" class="form-label">Username</label>
        <input type="text" class="form-control mb-3 auth-input" id="username" name="username" placeholder="Enter username" required>
        <!-- Password -->
        <label for="password" class="form-label">Password</label>
        <input type="password" class="form-control mb-2 auth-input" id="password" name="password" placeholder="Enter password" required>

        <div class="d-flex justify-content-between mb-3 small">
            <a href="#">Forgot Password?</a>
            <span>* Required</span>
        </div>

        <div class="form-check mb-4">
            <input class="form-check-input" type="checkbox" id="remember">
            <label class="form-check-label" for="remember">Remember Me</label>
        </div>

        <button class="btn btn-dark w-100 py-2 auth-btn">SIGN IN</button>
    </form>
    <div class="d-flex align-items-center my-4">
        <hr class="flex-grow-1">
        <hr class="flex-grow-1">
    </div>

    </div>

        <%- include('partials/footer.ejs') %> 
        <script src="/js/script.js"></script>  
    </body>

</html>